<?xml version="1.0" encoding="utf-8" ?>
<StyleCopTestDescription TestName="Comments">
  <!-- Tests the use of empty comments. -->
  <Test Name="CommentsMustContainText">
    <TestCodeFile>CommentsMustContainText.cs</TestCodeFile>
    <Settings>
      <GlobalSettings>
        <StringProperty Name="MergeSettingsFiles">NoMerge</StringProperty>
        <BooleanProperty Name="RulesEnabledByDefault">False</BooleanProperty>
      </GlobalSettings>
      <Analyzers>
        <Analyzer AnalyzerId="StyleCop.CSharp.ReadabilityRules">
          <Rules>
            <Rule Name="CommentsMustContainText">
              <RuleSettings>
                <BooleanProperty Name="Enabled">True</BooleanProperty>
              </RuleSettings>
            </Rule>
          </Rules>
        </Analyzer>
      </Analyzers>
    </Settings>
    <ExpectedViolations>
      <Violation Section="Root" LineNumber="49" Rule="CommentsMustContainText"/>
      <Violation Section="Root" LineNumber="51" Rule="CommentsMustContainText"/>
